[
  {
    "name": "${APPLICATION_NAME}",
    "image": "${ECR_URL}:${APPLICATION_VERSION}",
    "cpu": 256,
    "memoryReservation": 128,
    "essential": true,
    "mountPoints": [],
    "portMappings" : [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "${LOG_GROUP}",
              "awslogs-region": "${AWS_REGION}",
              "awslogs-stream-prefix": "${APPLICATION_NAME}"
          }
    }
  }
]